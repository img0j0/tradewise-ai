# TradeWise AI Environment Configuration

# Core Application
SESSION_SECRET=your-session-secret-key-here-change-in-production
DATABASE_URL=postgresql://username:password@localhost:5432/tradewise_ai
FLASK_ENV=development

# External Services
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Redis Configuration (Optional - for enhanced caching and async queues)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password-here

# Queue Configuration
ASYNC_WORKERS_ENABLED=true
ASYNC_WORKER_COUNT=3
TASK_QUEUE_MAX_RETRIES=3

# Performance Settings
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
PRECOMPUTATION_ENABLED=true

# Logging
LOG_LEVEL=INFO
WORKER_LOG_FILE=logs/worker.log

# Feature Flags
AI_ENHANCED_FEATURES=true
PREMIUM_FEATURES_ENABLED=true
MONITORING_ENABLED=true